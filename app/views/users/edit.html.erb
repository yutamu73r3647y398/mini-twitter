<% provide(:title, 'Edit user') %>
<% provide(:button_text, 'Save changes') %>
<h1>Update your profile</h1>

<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class = "gravatar_edit">
      <%= gravatar_for @user %>
      <!--target="_blank"の記述をすると、リンク先を新規タブで開かせることが可能-->
      <a href = "https://gravatar.com/emails" target = "_blank" rel = "noopener">changes</a>
    </div>
  </div>
</div>